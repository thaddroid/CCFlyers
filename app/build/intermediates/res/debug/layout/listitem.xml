<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItemRootRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <RelativeLayout 
        android:id="@+id/listItemMainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/black">
        
        <RelativeLayout 
            android:id="@+id/listItemImageRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp">
            
            <ImageView 
                android:id="@+id/listItemBannerImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="default_content"
                android:background="@color/red"/>
            
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/listItemImageRelativeLayout"
            android:padding="10dp"
            android:weightSum="3">
            
            <TextView 
                android:id="@+id/listItemMarketNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="CCFlyers"/>
            
            <TextView 
                android:id="@+id/listItemWeekDiscountTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="N/A"/>
            
            <TextView 
                android:id="@+id/listItemDiscountPeriodTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="N/A"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    </LinearLayout>

</RelativeLayout>
